doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title HIS Hospital - Login
    style.
      * {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
          font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      
      body {
          background: linear-gradient(135deg, #e3f2fd, #bbdefb);
          height: 100vh;
          display: flex;
          justify-content: center;
          align-items: center;
      }
      
      .contenedor-login {
          width: 90%;
          max-width: 400px;
          background: white;
          border-radius: 15px;
          box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
          padding: 2.5rem;
          text-align: center;
          animation: fadeIn 0.5s ease-in-out;
      }
      
      @keyframes fadeIn {
          from { opacity: 0; transform: translateY(20px); }
          to { opacity: 1; transform: translateY(0); }
      }

      .logo-hospital {
          width: 140px;
          height: 100px;            
          object-fit: contain;
      }       
     
      .titulo {
          color: #1976d2;
          margin-bottom: 0.5rem;
          font-size: 1.8rem;
      }
      
      .subtitulo {
          color: #757575;
          margin-bottom: 2rem;
          font-size: 0.9rem;
      }
      
      .grupo-formulario {
          margin-bottom: 1.5rem;
          text-align: left;
      }
      
      label {
          display: block;
          margin-bottom: 0.5rem;
          color: #424242;
          font-weight: 500;
          font-size: 0.9rem;
      }
      
      input {
          width: 100%;
          padding: 12px 15px;
          border: 1px solid #e0e0e0;
          border-radius: 8px;
          font-size: 1rem;
          transition: all 0.3s;
      }
      
      input:focus {
          border-color: #1976d2;
          outline: none;
          box-shadow: 0 0 0 3px rgba(25, 118, 210, 0.2);
      }  
      
      .boton-login {
          width: 100%;
          padding: 14px;
          background: #1976d2;
          color: white;
          border: none;
          border-radius: 8px;
          font-size: 1rem;
          font-weight: 600;
          cursor: pointer;
          transition: background 0.3s;
      }
      
      .boton-login:hover {
          background: #1565c0;
      }        
            

  body
    .contenedor-login
      img.logo-hospital(src="img/Logo-Hospital1.jpg" alt="Logo del Hospital")
      h1.titulo Sistema Hospitalario HIS
      
      form#formulario-login
        .grupo-formulario
          label(for="usuario") Usuario
          input#username(type="text" name="usuario" placeholder="Ingrese su usuario")
        
        .grupo-formulario
          label(for="contraseña") Contraseña
          input#password(type="password" name="contraseña" placeholder="Ingrese su contraseña")

        button.boton-login(type="submit",href:"/recepcion.pug") Iniciar Sesión

    script.
       document.getElementById('formulario-login').addEventListener('submit', function(e) {
          e.preventDefault(); 
          
         
          const usuario = document.getElementById('username');
          const contraseña = document.getElementById('password');
          
         
          const errorUsuario = document.getElementById('error-usuario');
          const errorContraseña = document.getElementById('error-contraseña');
          if (errorUsuario) errorUsuario.remove();
          if (errorContraseña) errorContraseña.remove();
          
          
          let hasError = false;
          if (!usuario.value.trim()) {
              const error = document.createElement('p');
              error.id = 'error-usuario';
              error.style.color = 'red';
              error.style.fontSize = '12px';
              error.textContent = 'El campo usuario es obligatorio.';
              usuario.parentNode.appendChild(error);
              hasError = true;
          }
          
          if (!contraseña.value.trim()) {
              const error = document.createElement('p');
              error.id = 'error-contraseña';
              error.style.color = 'red';
              error.style.fontSize = '12px';
              error.textContent = 'El campo contraseña es obligatorio.';
              contraseña.parentNode.appendChild(error);
              hasError = true;
          }
          
          if (hasError) {
              return;
          }
          
          // Aquí iría la conexión con tu backend en Node.js
          console.log(`Enviando: ${usuario.value}, ${contraseña.value}`);
          
          // Simulación de redirección (reemplazar con tu lógica real)          
           window.location.href = '/recepcion';
      });