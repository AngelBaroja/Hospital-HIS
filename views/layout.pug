doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title HIS Hospital - Recepción
    link(rel="stylesheet" href="/estilos.css")
    link(rel="icon" type="image/x-icon" href="/img/Favicon.ico")
  body 
    .contenedor        
      header
        .navbar
          .navbar-left
            img(src="/img/Logo-Hospital.jpg" alt="Logo del Hospital")
            a#home(href="/home").logo HIS Hospital
          .navbar-center
            nav
              if cargo == "Recepcionista"
                a#recepcion(href="/recepcion") Recepción
                a(href="/turno/elegir") Turno              
                a(href="/recepcion/lista") Pacientes
              if cargo == "Enfermera"
                a#enfermero(href="/enfermeria/pacientesInternados") Pacientes Internados
                a(href="/turno/elegir") Turno
                a(href="/doctor/lista") Pacientes
          .navbar-right
            .info-usuario              
                span #{cargo}: #{usuario}
      block content      
      
        
